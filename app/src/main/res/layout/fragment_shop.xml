<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.shop.ShopFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="50sp"
        android:background="#00F8F5F5"
        app:defaultQueryHint="Search"
        app:queryHint="Search" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/search_view"
        android:background="@drawable/settings"
        android:foregroundGravity="center"
        android:padding="20dp" />

    <TextView
        android:id="@+id/best_offers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_view"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10sp"
        android:gravity="center|start"
        android:text="@string/best_offers"
        android:textColor="#3E2723"
        android:textSize="20sp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/best_offers_pager"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_below="@+id/best_offers"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center_horizontal" />

    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:id="@+id/best_dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/best_offers_pager"
        android:layout_centerHorizontal="true"
        android:layout_margin="5sp"
        app:dotsColor="#3E2723" />

    <TextView
        android:id="@+id/last_offers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/best_dots_indicator"
        android:layout_marginLeft="20sp"
        android:gravity="center|start"
        android:text="@string/last_offers"
        android:textColor="#3E2723"
        android:textSize="20sp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/last_offers_pager"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_below="@+id/last_offers"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center_horizontal" />


    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:id="@+id/last_dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_offers_pager"
        android:layout_centerHorizontal="true"
        android:layout_margin="5sp"
        app:dotsColor="#3E2723" />

</RelativeLayout>