<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150sp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:layout_toStartOf="@+id/item_image"
        android:fontFamily="@font/basic"
        android:text="Buy two Coffee"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/item_image"
        android:layout_width="150sp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:padding="10sp" />


    <RelativeLayout
        android:id="@+id/price_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_above="@+id/add_remove"
        android:layout_toStartOf="@+id/item_image">


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/price_word"
            android:fontFamily="@font/abeezee"
            android:text="150 EGP" />


        <TextView
            android:id="@+id/price_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:fontFamily="@font/aclonica"
            android:text="Price:" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_remove"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/item_image">


        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="5sp"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text="@string/add_to_cart"
            android:textColor="#1DA520"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5sp"
            android:layout_toEndOf="@+id/add"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:textColor="#F44336"
            android:text="@string/remove"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>