<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="Style.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/stroke_outlined_text_input</item>
        <item name="boxStrokeColor">@color/stroke_outlined_text_input</item>
    </style>

</resources>